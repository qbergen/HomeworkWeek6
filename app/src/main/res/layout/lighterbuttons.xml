<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.queenabergen.cuesays.MainActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/happybutton"
        android:background="@color/light_blue"
        android:layout_alignParentRight="true"
        android:id="@+id/lightblue_button" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/happybutton"
        android:background="@color/lighter_green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/lightgreen_button" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/happybutton"
        android:background="@color/lighter_red"
        android:id="@+id/lightred_button" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/happybutton"
        android:layout_alignParentBottom="true"
        android:background="@color/lighter_yellow"
        android:id="@+id/lightyellow_button" />

    <TextView
        android:text="1"
        android:textStyle="bold"
        android:textSize="70sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:id="@+id/roundNumber" />
</RelativeLayout>